{
    "name": "ng2-material",
    "version": "0.0.0",
    "license": "MIT",
    "angular-cli": {},
    "scripts": {
        "start": "npm-run-all lint ng:serve",

        "build": "npm-run-all lint ng:build docs",
        "build:prod": "npm-run-all lint ng:build:prod docs",
        "build:stag": "npm-run-all lint ng:build:stag docs",
        "build:gh-pages": "npm-run-all lint ng:build:gh-pages gh-pages:404 docs",


        "ng:build:gh-pages": "ng build --prod --base-href /ng2-material/",
        "gh-pages:404": "copy .\\dist\\index.html .\\dist\\404.html",
        "push:gh-pages": "git subtree push --prefix dist origin gh-pages",
        "deploy:gh-pages": "npm-run-all build:gh-pages github-pages",

        "ng:serve": "ng serve",
        "ng:serve:prod": "ng serve --prod",
        "ng:serve:stag": "ng serve --environment=stag",

        "ng:build": "ng build",
        "ng:build:prod": "ng build --prod",
        "ng:build:stag": "ng build --environment=stag",

        "localtunnel": "lt --port 4200 --subdomain ahclibrary",
        "share": "npm-run-all --parallel serve:prod localtunnel",

        "lint": "tslint \"src/**/*.ts\"",
        "test": "ng test",
        "pree2e": "webdriver-manager update",
        "e2e": "protractor",

        "api": "npm-run-all json-schema-faker json-server",
        "json-schema-faker": "generate-json api/schema.json api/db.json",
        "json-server": "json-server --watch api/db.json",

        "docs": "npm run compodoc",
        "compodoc": "./node_modules/.bin/compodoc -p src/tsconfig.json -d docs -s"
    },
    "private": true,
    "dependencies": {
        "@angular/common": "~2.1.0",
        "@angular/compiler": "~2.1.0",
        "@angular/core": "~2.1.0",
        "@angular/forms": "~2.1.0",
        "@angular/http": "~2.1.0",
        "@angular/material": "^2.0.0-alpha.10",
        "@angular/platform-browser": "~2.1.0",
        "@angular/platform-browser-dynamic": "~2.1.0",
        "@angular/router": "~3.1.0",
        "bootstrap": "^4.0.0-alpha.5",
        "core-js": "^2.4.1",
        "ng2-sidebar": "^1.7.0",
        "rxjs": "5.0.0-beta.12",
        "ts-helpers": "^1.1.1",
        "zone.js": "^0.6.23"
    },
    "devDependencies": {
        "@types/jasmine": "^2.2.30",
        "@types/node": "^6.0.42",
        "angular-cli": "1.0.0-beta.19-3",
        "codelyzer": "1.0.0-beta.1",
        "compodoc": "0.0.16",
        "jasmine-core": "2.4.1",
        "jasmine-spec-reporter": "2.5.0",
        "json-schema-faker": "0.3.6",
        "json-server": "0.8.22",
        "karma": "1.2.0",
        "karma-chrome-launcher": "^2.0.0",
        "karma-cli": "^1.0.1",
        "karma-jasmine": "^1.0.2",
        "karma-remap-istanbul": "^0.2.1",
        "localtunnel": "1.8.1",
        "npm-run-all": "3.1.1",
        "protractor": "4.0.9",
        "ts-node": "1.2.1",
        "tslint": "3.13.0",
        "typescript": "~2.0.3",
        "webdriver-manager": "10.2.5"
    }
}
